<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title></title>
<%= stylesheet_link_tag :all %>
<%= javascript_include_tag :defaults %>
<%= javascript_include_tag "jquery.js"%>
<%= csrf_meta_tag %>
</head>
<body>
<!-- start header -->
<div id="logo">
	<p>League Management System</p>
	<%=image_tag "logo.png", :height => "55px"%>
</div>
<div id="menu">
	<ul>
		<% if session[:loggedin] %>
			<li class="menu-tab" id="leaguesTab"><%= link_to "Leagues", 
				:controller => "leagues", :action => "index" %></li>
			<li class="menu-tab" id="usersTab"><%= link_to "Users", 
				:controller => "users", :action => "index" %></li>
  	  		<li class="menu-tab"><%= link_to "Logout",  
				:controller => 'pages', :action => 'logout' %></li>

			<div class="search">
				<%= form_tag(:controller => 'pages', :action => 'search') do %>
					<%= text_field_tag(:q) %>
					<%= submit_tag("Search") %>
				<% end %>
				
			</div>
  		<% end %>
		
		
	</ul>
</div>
<!-- end header -->
<!-- start page -->
<div id="page">
	<div id="page-bg" style="min-height:500px; padding-top:20px; padding-left:50px; padding-right:50px">
		<%= yield %>
		<div style="clear: both;">&nbsp;</div>
	</div>
</div>
<!-- end page -->
<div id="footer">

</div>
</body>
</html>
