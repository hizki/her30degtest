<script>changeMenuTab("usersTab");</script>

<center>
	<h1>Users</h1>
	<%= link_to 'New User', new_user_path %><br /><br />

	<table>
	  <tr>
		<th>ID</th>
		<th></th>
	    <th>Name</th>
	    <th>Leagues</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>

	<% @users.each do |user| %>
	  <tr>
		<td><%= user.member_id %></td>
		<td> </td>
	    <td><%= link_to user.name, user %></td>
		<td>
			<% for l in user.leagues %>
	    		<%=	l.game %>:<%= Ranking.where(:user_id => user.id, :league_id => l.id)[0].ranking %>
			<% end %>
		</td>
	  </tr>
	<% end %>
	</table>
	<br />

</center>